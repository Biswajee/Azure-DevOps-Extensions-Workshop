{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "rootDir": ".",
    "lib": ["es6", "es2015", "dom"],
    "types": ["mocha", "node"],
    "moduleResolution": "node"
  },
  "include": ["**/*.ts"]
}
